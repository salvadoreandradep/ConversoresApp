<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#E91E63">

    <ImageView
        android:id="@+id/imgAtras"
        android:layout_width="20dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/arrow_back_ios_119432" />

    <androidx.cardview.widget.CardView
        android:id="@+id/crvPhotoToChat"
        android:layout_marginTop="10dp"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginLeft="40dp"
        app:cardCornerRadius="150dp">

        <ImageView
            android:id="@+id/imgPhotoChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/lblToChats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:text="Amigo..."
        android:textColor="#FFFFFF" />

    <ListView
        android:id="@+id/ltsChats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/photo_1586809764311_090bc6068916"
        android:divider="@null"
        android:stackFromBottom="true" />

    <EditText
        android:id="@+id/txtMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="90dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Escribe un mensaje"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#E91E63"
        android:text="Enviar" />

</RelativeLayout>